{
    "manifest_version": 3,
    "name": "Code Converter",
    "version": "1.0",
    "description": "Convert code between programming languages",
    "permissions": [
      "contextMenus",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "https://syntha.ai/*"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["prism.css"],
        "js": ["prism.js"]
      }
    ]
  }