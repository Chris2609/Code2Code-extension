{
  "manifest_version": 2,
  "name": "Code2Code",
  "version": "1.0",
  "description": "Convert code between programming languages",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon64.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "https://syntha.ai/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["prism.css"],
      "js": ["prism.js"]
    }
  ]
}
